       <TableRow
           android:layout_height="wrap_content"
           android:layout_width="wrap_content">
           <Switch
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Purchase Now!!"
               android:textColor="@android:color/holo_blue_light"
               android:textStyle="bold"
               android:paddingLeft="40dp"/>
           <Switch
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
