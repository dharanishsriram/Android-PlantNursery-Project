       android:layout_height="wrap_content"
       android:paddingTop="50dp">
       <TableRow
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >

           <ImageView
               android:layout_width="200dp"
               android:layout_height="100dp"
               android:src="@drawable/pumkin" />

           <ImageView
               android:layout_width="200dp"
               android:layout_height="100dp"
               android:src="@drawable/melon" />
       </TableRow>
