           android:layout_height="wrap_content"
           android:layout_width="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Pumkin(Rs.10)"
               android:textSize="20dp"
               android:paddingLeft="30dp"
               />
