<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT YOUR OUTDOOR PLANTS:"
                android:textSize="34dp"
                android:fontFamily="cursive"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="BUY ONE GET ONE FREE"
                android:textColor="#F41717"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50dp">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:src="@drawable/chives" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:src="@drawable/sedum" />
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="chives(Rs.10)"
                        android:textSize="20dp"
                        android:paddingLeft="30dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sedum(Rs.10)"
                        android:textSize="20dp"
                        android:paddingLeft="40dp"
                        />
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Now!!"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold"
                        android:paddingLeft="40dp"/>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Now!!"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold"
                        android:paddingLeft="40dp"/>

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="27dp"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:src="@drawable/geraniums" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/pothos" />

                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="geraniums(Rs.500)"
                        android:textSize="20dp"
                        android:paddingLeft="30dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="agave(Rs.450)"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Now!!"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold"
                        android:paddingLeft="40dp"/>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Now!!"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold"
                        android:paddingLeft="40dp"/>

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="27dp"
                    >


                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:src="@drawable/yucca" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cactus" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yuca(Rs.100)"
                        android:textSize="20dp"
                        android:paddingLeft="30dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cactus(Rs.90)"
                        android:textSize="20dp"
                        android:paddingLeft="40dp"
                        />
                </TableRow>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Now!!"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold"
                        android:paddingLeft="40dp"/>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Now!!"
                        android:textColor="@android:color/holo_blue_light"
                        android:textStyle="bold"
                        android:paddingLeft="40dp"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <Button
                        android:id="@+id/backo"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text=" Back"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/design_default_color_secondary_variant"/>
                    <Button
                        android:id="@+id/exito"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text="Buy Now "
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/design_default_color_secondary_variant"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>